mixin image(param,title,text)
    -var btnsA={btnA: "Lost",btnB: "Toronto", btnE:"Green"}
    -var btnsB={btn1: "Lost",btn5: "Designer"}
    -var btnsC={btn7:"Text", btn4:"Khartoum",btnA:"Detroit"}
        div(class=attributes.class)
            -var btn=param
            case btn
                when 14
                    each btn, key in btnsA
                         button(class=`${key}`)= btn
                when 15
                    each btn,key in btnsB 
                        button(class=`${key}`)=btn
                when 16
                    each btn,key in btnsC 
                        button(class=`${key}`)=btn
            .description 
               h3=title 
               p=text